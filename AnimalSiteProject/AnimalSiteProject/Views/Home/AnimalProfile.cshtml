@model Animal
@{
    ViewBag.Title = $"{Model.AnimalName}";
    Layout = "~/Views/Shared/Layout/_Layout.cshtml";
}

@*Animal Profile*@
<div class="bg-secondary">
    <div class="container d-flex align-content-center card bg-dark text-white" style="width: 25rem;">
        <div class="card-img-overlay h-50">
            <h5 class="display-5 card-title">@Model.AnimalName</h5>
            <h6 class="card-text">@Html.DisplayNameFor(a => a.Age): @Html.DisplayFor(a => a.Age)</h6>
        </div>
        <img class="card-img" src="~/Pictures/@(Model.PictureName)" alt="..." style="margin-top: 25px">
        <div class="card-body">
            <h6>@Html.DisplayNameFor(a => a.Description)</h6>
            <p>@Html.DisplayFor(a => a.Description)</p>
        </div>
        <div>
            Comments:
            @await Html.PartialAsync("_CommentsPartial", new CommentsViewModel(Model))
        </div>
    </div>
</div>