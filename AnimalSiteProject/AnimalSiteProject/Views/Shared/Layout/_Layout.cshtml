<!DOCTYPE html>

@*Layout*@
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Best Animals In The Entire Planet, Nay! In The Galaxy!! | @ViewBag.Title</title>
    <link href="~/Bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

</head>
        <body class="contrainer bg-dark">
            <div class="container">
                <header class="container bg-dark border border-white">
                    <div class="d-flex justify-content-center bg-dark align-items-center flex-column" style="width:100%">
                        <img class="img-fluid" alt="Responsive image" src="~/Pictures/Header2.jpeg" style="width: 1105px; height: 221px; background-size:cover">
                        <nav class="navbar navbar-expand-lg navbar-light bg-light d-flex align-items-center bg-dark border border-white" style="width:103%">
                            <a class="navbar-brand h1 text-white" asp-controller="Home" asp-action="Index">Home</a>
                            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                                <ul class="navbar-nav">
                                    <li class="nav-item active">
                                        <a class="nav-link text-white" asp-controller="Home" asp-action="Catalog">Catalog <span class="sr-only">(current)</span></a>
                                    </li>
                                </ul>
                                <ul class="navbar-nav">
                                    <li class="nav-item active">
                                        <a class="nav-link text-white" asp-controller="Admin" asp-action="AdminActions">Admin <span class="sr-only">(current)</span></a>
                                    </li>
                                </ul>
                            </div>
                            @await Html.PartialAsync("_SearchPartial",new SearchViewModel()) 
                        </nav>
                    </div>
                </header>
                <div class=" bg-secondary d-flex justify-content-center align-items-center flex-column" style="width:1111px; height:900px; max-height:100%">
                    @RenderBody()
                </div>
                <div>
                    <footer class="container bg-dark border border-white">
                        This is a footer
                    </footer>
                </div>
                @*<script src="~/Bootstrap/dist/js/bootstrap.bundle.min.js"></script>*@
                <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"></script>
                <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.16.0/jquery.validate.min.js"></script>
                <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>
                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
            </div>    
        </body>
</html>
